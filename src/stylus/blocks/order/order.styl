@require 'settings/base/breakpoints'

.order
    +above($screen-sm)
        display flex
        flex-direction column
        align-items center
        justify-content center
        flex-grow 1

    &__form
        +between($screen-sm, $screen-md)
            width 75%

        +above($screen-md)
            min-width 310px
            max-width 550px
            width 40vw
