@require 'settings/base/sizes'
@require 'settings/base/breakpoints'

.main
    display flex
    flex-direction column
    flex-grow 1

    &__content
        display flex
        flex-grow 1
        flex-direction column
        padding-right $site-horizontal-padding
        padding-bottom $site-padding-bottom
        padding-left @padding-right

        .page-header
            margin-bottom 30px

            +above($screen-sm)
                display none
