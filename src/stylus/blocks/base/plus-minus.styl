@require 'settings/base/time'

.plus-minus
    position relative
    display inline-block
    width .75em
    height .75em
    vertical-align baseline

    &:before
    &:after
        position absolute
        background-color white
        content ""
        transition transform $time-md linear

    &:before
        top 0
        left 50%
        margin-left -.04em
        width .08em
        height 100%

    /* horizontal line */
    &:after
        top 50%
        left 0
        margin-top -.04em
        width 100%
        height .08em
